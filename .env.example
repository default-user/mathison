# Mathison v2.2 Environment Configuration
# Copy this to .env and fill in values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# PostgreSQL Configuration (Server Memory Store)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mathison
POSTGRES_USER=mathison
POSTGRES_PASSWORD=mathison_dev_password

# Alternative: Full connection string
# DATABASE_URL=postgresql://mathison:mathison_dev_password@localhost:5432/mathison

# SQLite Configuration (Local Memory Store)
SQLITE_PATH=./mathison.db

# Governance Configuration
AUTHORITY_CONFIG_PATH=./config/authority.json
GOVERNANCE_CAPSULE_PATH=./config/governance-capsule.json
GOVERNANCE_CAPSULE_TTL_SECONDS=300

# Crypto Configuration (test keys - DO NOT USE IN PRODUCTION)
# In production, use proper key management (HSM, Vault, etc.)
GOVERNANCE_PUBLIC_KEY_PATH=./config/keys/governance-public.pem

# Adapter Configuration
ADAPTER_CONFORMANCE_STRICT=true

# =============================================================================
# Model Bus Configuration (v2.2)
# =============================================================================
# API keys for AI model providers. These are used by @mathison/model-bus.
# IMPORTANT: Never commit actual API keys to the repository!

# OpenAI API Key (required for gpt-4, gpt-3.5, o1, o3 models)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (required for claude-3, claude-2 models)
# Get your key at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Optional: Custom base URLs for proxies or self-hosted deployments
# OPENAI_BASE_URL=https://api.openai.com
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
