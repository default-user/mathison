# Mathison v2.1 Environment Configuration
# Copy this to .env and fill in values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# PostgreSQL Configuration (Server Memory Store)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mathison
POSTGRES_USER=mathison
POSTGRES_PASSWORD=mathison_dev_password

# Alternative: Full connection string
# DATABASE_URL=postgresql://mathison:mathison_dev_password@localhost:5432/mathison

# SQLite Configuration (Local Memory Store)
SQLITE_PATH=./mathison.db

# Governance Configuration
AUTHORITY_CONFIG_PATH=./config/authority.json
GOVERNANCE_CAPSULE_PATH=./config/governance-capsule.json
GOVERNANCE_CAPSULE_TTL_SECONDS=300

# Crypto Configuration (test keys - DO NOT USE IN PRODUCTION)
# In production, use proper key management (HSM, Vault, etc.)
GOVERNANCE_PUBLIC_KEY_PATH=./config/keys/governance-public.pem

# Adapter Configuration
ADAPTER_CONFORMANCE_STRICT=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
