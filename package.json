{
  "name": "mathison-monorepo",
  "version": "1.0.1",
  "private": true,
  "description": "Mathison: OI + graph/hypergraph memory with multi-language SDKs",
  "scripts": {
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "dev": "pnpm --filter mathison-server dev",
    "server": "pnpm --filter mathison-server start",
    "demo": "node scripts/demo.mjs",
    "sbom": "node scripts/generate-sbom.mjs",
    "generate-sdks": "pnpm --filter mathison-sdk-generator generate",
    "quad:node": "pnpm --filter mathison-quadratic dev",
    "quad:selftest": "pnpm --filter mathison-quadratic selftest",
    "quad:build": "pnpm --filter mathison-quadratic build"
  },
  "keywords": [
    "mathison",
    "oi",
    "graph",
    "hypergraph",
    "memory",
    "sdk"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^4.1.2"
  }
}
