# Mathison v2 Configuration

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info
NODE_ENV=development

# PostgreSQL (required)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=mathison
POSTGRES_USER=mathison
POSTGRES_PASSWORD=mathison_dev_password

# Authority (required)
# Path to authority config file
AUTHORITY_CONFIG_PATH=./config/authority.json
# Principal ID (overrides config if set)
PRINCIPAL_ID=

# Feature Flags (optional backends)
ENABLE_NATS=false
ENABLE_VALKEY=false
ENABLE_OPENSEARCH=false
ENABLE_APACHE_AGE=false

# NATS (optional)
NATS_URL=nats://localhost:4222
NATS_STREAM=mathison

# Valkey/Redis (optional)
VALKEY_URL=redis://localhost:6379

# OpenSearch (optional)
OPENSEARCH_URL=https://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# Artifacts Storage
ARTIFACTS_STORAGE=filesystem
ARTIFACTS_PATH=./data/artifacts

# Request Tracing
ENABLE_REQUEST_LOGGING=true
